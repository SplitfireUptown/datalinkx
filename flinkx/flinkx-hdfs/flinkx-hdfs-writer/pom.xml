                </exclusion>
            </exclusions>
        </dependency>
        <!--lzop-->
        <dependency>
            <groupId>com.dtstack.flinkx</groupId>
            <artifactId>flinkx-hdfs-core</artifactId>
            <version>1.6</version>
            <exclusions>
                <exclusion>
                    <artifactId>jsr305</artifactId>
